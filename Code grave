#Buy balls if it runs out            
        if message.user == 'pokemoncommunitygame' and message is not None:
            if 'Check the extension to see your items' in message.text:
                for word in pokemon.LIST:
                    word_parts = word.split(':')
                    if word_parts[1] in message.text == '':
                        word_parts[1] = 'Pokeball'
                        
                    else:
                        self.send_privmsg(message.channel, f'!pokeshop {word_parts[1]} 10')
                        
        
        #Look for failed purachase                
        if message.user == 'pokemoncommunitygame' and message is not None:
            if f'@{self.username} You cant buy that item.' in message.text:
                for word in pokemon.LIST:
                    word_parts = word.split(':')
                    if word_parts[1] in message.text:
                        print(f'Could not buy {word_parts[1]}')